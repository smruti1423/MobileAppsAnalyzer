<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/main_layout_margins"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/txtTrackHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/relative_margin_top"
        android:text="@string/analysisMessageCategories"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#C9B03E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/time_notifier"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F7FCB6"
            android:padding="@dimen/relative_margin_top2"
            android:text="@string/totalGames_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#DB4040"
            android:textSize="@dimen/time_notifier" />

        <TextView
            android:id="@+id/txtTimeFormat"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F7FCB6"
            android:paddingLeft="@dimen/time_notifier"
            android:text="@string/timeFormat"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#DB4040"/>

        <GridLayout
            android:id="@+id/list_subCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_message"
            android:background="#F7FCB6"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="3" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|center"
                android:layout_marginLeft="@dimen/relative_margin_top"
                android:layout_row="0"
                android:orientation="vertical"
                android:padding="@dimen/relative_margin_top2" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temple_run"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3C3B40" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temple_run_time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#DB4040" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="1"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="@dimen/relative_margin_top"
                android:layout_row="1"
                android:orientation="vertical"
                android:padding="@dimen/relative_margin_top2" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hill_climb"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3C3B40" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hill_climb_time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#DB4040" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="2"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="@dimen/relative_margin_top"
                android:layout_row="2"
                android:orientation="vertical"
                android:padding="@dimen/relative_margin_top2" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_racing"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3C3B40" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_racing_time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#DB4040" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Workspaces/Android/MobileAnalyzer/res/layout/games_activity.xml -->